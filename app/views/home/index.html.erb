<h1>The Grad List</h1>

<% if user_signed_in? %>
<p><%= current_user.email %></p>

ToDo
<ul>
  <%current_user.items.each do |item| %>
  <%if item.done == 0 %>
  <li>
    <%= item.content %>, added on
    <%= item.show_date %>.
    <%= link_to "Remove", item_path(:id => item.id), method: :delete %>
    <%= link_to "Done", item_path(:id => item.id), method: :done %>
  </li>
  <% end %>
  <% end %>
</ul>

Done
<ul>
  <%current_user.items.each do |item| %>
  <%if item.done == 1 %>
  <li>
    <%= item.content %>, added on
    <%= item.show_date %>.
    <%= link_to "Remove", item_path(:id => item.id), method: :delete %>
    <%= link_to "UnDone", item_path(:id => item.id), method: :done  %>
  </li>
  <% end %>
  <% end %>
</ul>

<p><a href="items/new">New Item</a></p>

<p><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></p>
<% else %>
<p><a href="/users/sign_up">Sign Up</a> | <a href="/users/sign_in">Sign In</a></p>
<% end %>

<a href="/"><img id="logo" src=<%= image_path('logo.png') %>/></a>

<%if @todo_items.count != 0 or @done_items.count != 0%>
  <h1>Items</h1>
<% end %>

<%if @todo_items.count != 0%>
  <h2>ToDo</h2>
  <% @todo_items.each do |item| %>
    <p>
      <%= item.content %>, added on
      <%= item.show_date %>.
      <%= link_to "Remove", item_path(:id => item.id), method: :delete %>
      <%= link_to "Done", done_items_path(:id => item.id), method: :put %>
    </p>
  <% end %>
<% end %>

<%if @done_items.count != 0%>
  <h2>Done</h2>
  <% @done_items.each do |item| %>
    <p>
      <%= item.content %>, added on
      <%= item.show_date %>.
      <%= link_to "Remove", item_path(:id => item.id), method: :delete %>
      <%= link_to "UnDone", done_items_path(:id => item.id), method: :put %>
    </p>
  <% end %>
<% end %>

<p><a href="items/new">New Item</a></p>
